# Movidesk API Configuration
MOVIDESK_TOKEN=your_movidesk_api_token_here
MOVIDESK_BASE_URL=https://api.movidesk.com/public/v1

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Email Configuration (SMTP)
EMAIL_ENABLED=true
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_TO=recipient@example.com

# Agent Configuration
# Option 1: Single Agent Mode (compatibilidade v1.0)
MOVIDESK_AGENT_EMAIL=seu_email@empresa.com

# Option 2: Multi-Agent Mode (novo v2.0) - Separe emails com ponto-e-vírgula
# AGENTS=agente1@empresa.com;agente2@empresa.com;agente3@empresa.com
# Nota: Se AGENTS estiver configurado, MOVIDESK_AGENT_EMAIL é ignorado
# Cada agente receberá seu relatório no próprio email

# Logging
LOG_LEVEL=INFO
